using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Threading;
using System.Globalization;
using System.Numerics;

namespace HelloCSharp
{
    class Program
    {
        static void Main(string[] args)
        {
            /* 4.    Write a program that converts a decimal number to binary one.
             */

            Console.Write("Enter n:");
            int decimalNum = int.Parse(Console.ReadLine());

            string binary;
            binary = Convert.ToString(decimalNum, 2);
            Console.WriteLine(binary);
            
            /* 5.    Write a program that converts a binary number to decimal one.
             */

            Console.Write("Enter n:");
            string binaryNum = Console.ReadLine();

            int decimalNum;
            decimalNum = Convert.ToInt32(binaryNum, 2);
            Console.WriteLine(decimalNum);
            
            /* 6.    Write a program that converts a decimal number to hexademical one.
             */

            Console.Write("Enter n:");
            int decimalNum = int.Parse(Console.ReadLine());

            string hexademical;
            hexademical = Convert.ToString(decimalNum, 16);
            Console.WriteLine(hexademical);
            
            /* 7.    Write a program that converts a hexadecimal number to decimal one.
             */

            Console.Write("Enter n:");
            string hexadecimal = Console.ReadLine();

            int decimalNum;
            decimalNum = Convert.ToInt32(hexadecimal, 16);
            Console.WriteLine(decimalNum);
        }
    }
}
